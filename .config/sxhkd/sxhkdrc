# Reload sxkhd
control + shift + r
    pkill -USR1 -x sxhkd

# Monitor select
super + F3  
    monitor_select

# Browser Select
super + F1
    browser_select

# Volume Controls
super + {button4,button5,Alt_L} 
    volume_controls {up,down,mute}

{XF86AudioRaiseVolume,XF86AudioLowerVolume,XF86AudioMute}
    volume_controls {up,down,mute}

# System power actions select
super + F7
    power_actions

# copy selection file 
control + F1
    session_clipboard --copy

# retrieve selections later
control + F2
    session_clipboard --paste

control + F12
    session_clipboard --reset

# Test Control
super + F12
    refresh_statusbar && notify-send -t 2500 "refreshed statusbar"
